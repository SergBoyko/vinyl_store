<!-- app/views/discs/index.html.erb -->
<div class="container mx-auto py-8 px-4">
  <h1 class="text-4xl font-bold mb-6 text-center text-gray-800">Витрина пластинок</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% @discs.each do |disc| %>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
        <img
          src="<%= disc.cover_url || asset_path('img.png') %>"
          alt="<%= disc.title %>"
          class="w-full h-56 object-cover">
        <div class="p-4">
          <h2 class="text-lg font-bold text-gray-800 truncate"><%= disc.title %></h2>
          <p class="text-gray-600 text-sm mt-1">Исполнитель: <%= disc.artist.name %></p>
          <p class="text-gray-600 text-sm mt-2">Жанры: <%= disc.genres.join(', ') %></p>
          <p class="text-gray-600 text-sm mt-2">Состояние: <%= disc.condition %></p>
          <p class="text-gray-600 text-sm mt-2">Цена: <%= number_to_currency(disc.price, unit: "₽") %></p>
          <div class="mt-4">
            <a
              href="<%= disc_path(disc) %>"
              class="block text-center bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition">
              Подробнее
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>